{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/JLStore/bin/Debug/net9.0/JLStore.dll",
      "args": [],
      "cwd": "${workspaceFolder}/JLStore",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach .NET (Docker jlstore-app)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false,
       "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "podman-compose",
        "pipeArgs": ["exec", "-T", "jlstore-app", "sh", "-c"],
        "debuggerPath": "/vsdbg/vsdbg"

      },
      "sourceFileMap": {
        "/src": "${workspaceFolder}/JLStore"
      },
      "logging": { "engineLogging": true, "moduleLoad": true }
    },
    {
      "name": "Attach .NET (Docker Compose)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false,
      "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "docker",
        "pipeArgs": ["compose", "exec", "-T", "jlstore-app", "sh", "-c"],
        "debuggerPath": "/vsdbg/vsdbg"
      },
      "sourceFileMap": { "/src": "${workspaceFolder}/JLStore" }
    }
  ]
}
