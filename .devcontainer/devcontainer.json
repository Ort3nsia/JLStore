// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:1-9.0-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {}
	},
	"customizations": {
		"vscode": {
		"extensions": [
			"ms-dotnettools.vscode-dotnet-runtime",
			"ms-dotnettools.csharp",
            "ms-dotnettools.csdevkit",
            "ms-azuretools.vscode-containers",
            "ms-vscode-remote.remote-containers",
            "ms-vscode.remote-server",
            "ms-vscode.remote-explorer",
            "ms-vscode-remote.remote-wsl",
            "streetsidesoftware.code-spell-checker"
		]
		}
	},
    "forwardPorts": [5250, 7250],
	"portsAttributes": {
			"7250": {
				"protocol": "https"
			},
            "5250": {
				"protocol": "http"
			}
	},
	
	"containerEnv": {
    "ASPNETCORE_URLS": "https://+:7250;http://+:5250",
    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/aspnetapp.pfx",
    "ASPNETCORE_Kestrel__Certificates__Default__Password": "devcert",
	"ConnectionStrings__Default": "Server=host.docker.internal,1433;Database=jlstore;User Id=sa;Password=StrongPassw0rd!;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=True"
	//"DISABLE_HTTPS_REDIRECT": "1"
  	},
	
	"remoteEnv": { "HTTP_PORTS": "", "HTTPS_PORTS": "" },

	"mounts": ["source=devcerts,target=/https,type=volume"],

	//"postCreateCommand": "dotnet restore ./JLStore/JLStore.csproj"

  	"postCreateCommand": "bash -lc 'sudo mkdir -p /https && sudo chown -R $(id -u):$(id -g) /https && (dotnet dev-certs https --check -q || dotnet dev-certs https -q) && dotnet dev-certs https -ep /https/aspnetapp.pfx -p devcert && dotnet restore ./JLStore/JLStore.csproj'"

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5000, 5001],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "dotnet restore",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}