{
  "name": "JLStore DevContainer",
  "build": {
    "context": "../JLStore",
    "dockerfile": "../JLStore/Containerfile"
  },
  "workspaceFolder": "/workspaces/JLStore",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-dotnettools.csharp"
      ]
    }
  },

  // ✅ Volume NuGet persistente (tutta la cartella, non solo "packages")
  "mounts": [
    "source=devcerts,target=/https,type=volume",
    "source=nuget-cache,target=/home/vscode/.nuget,type=volume"
  ],

  // ✅ Eseguito una sola volta alla PRIMA creazione del container (prima di postCreate)
  //    Crea le dir e sistema i permessi, così NuGet può scrivere il suo Config.
  "onCreateCommand": "sudo mkdir -p /home/vscode/.nuget/NuGet /home/vscode/.nuget/packages && sudo chown -R vscode:vscode /home/vscode/.nuget",

  // ✅ Restore + build automatici (niente comandi manuali)
  "postCreateCommand": "dotnet restore ./JLStore/JLStore.csproj -v minimal && dotnet build ./JLStore/JLStore.csproj -v minimal"
}
